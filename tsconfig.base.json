{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "skipLibCheck": true,
        "outDir": "dist",
        "paths": {
            "@hcmus/common": [
                "./packages/common"
            ],
            "@hcmus/common/*": [
                "./packages/common/*"
            ],
            "@hcmus/fastify": [
                "./packages/fastify"
            ],
            "@hcmus/fastify/*": [
                "./packages/fastify/*"
            ],
            "@hcmus/nest": [
                "./packages/nest"
            ],
            "@hcmus/nest/*": [
                "./packages/nest/*"
            ],
        }
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}